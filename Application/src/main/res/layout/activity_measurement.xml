<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:height="40dp"
                android:gravity="center"
                android:text="@string/device_name_header"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:height="40dp"
                android:gravity="center"
                android:text="@string/device_name"
                android:textSize="20dp"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                style="@style/myBtn"
                android:id="@+id/startMeasurementBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:text="@string/start_measure"
                android:layout_marginBottom="10dp"/>

            <Button
                style="@style/myBtn"
                android:id="@+id/finishMeasurementBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:drawableRight="@drawable/checked_96px"
                android:paddingBottom="2dp"
                android:paddingRight="8dp"
                android:gravity="center|center_vertical"
                android:text="@string/finish_measurement" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvPmTen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PM 10:"
                android:textSize="35dp"
                android:paddingLeft="25dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvPmTenValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="   -   "
                android:textSize="35dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvPmTwentyFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PM 25:"
                android:textSize="35dp"
                android:paddingLeft="25dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvPmTwentyFiveValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="   -   "
                android:textSize="35dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <include layout="@layout/graph_layout"></include>
    </LinearLayout>

</ScrollView>